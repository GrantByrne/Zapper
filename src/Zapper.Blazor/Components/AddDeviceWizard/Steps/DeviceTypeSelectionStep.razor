@using Zapper.Blazor.Components.AddDeviceWizard.DeviceTypes

<MudText Class="mb-4">Choose the type of device you want to add:</MudText>
<MudGrid>
    @foreach (var deviceType in DeviceTypes)
    {
        <MudItem xs="6" sm="4">
            <MudCard Class="@GetCardClass(deviceType)" 
                     Style="cursor: pointer;" 
                     @onclick="@(() => SelectDeviceType(deviceType))">
                <MudCardContent Class="text-center pa-4">
                    <MudIcon Icon="@deviceType.Icon" Size="Size.Large" Class="mb-2" />
                    <MudText Typo="Typo.h6">@deviceType.DisplayName</MudText>
                    <MudText Typo="Typo.body2" Class="mud-text-secondary">
                        @deviceType.Description
                    </MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
    }
</MudGrid>